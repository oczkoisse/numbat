[flake8]
# For black compatibility
max-line-length = 88
extend-ignore = E203
# PEP-8 max length for comments/docstrings
max-doc-length = 79
# Exclude patterns
exclude =
    # Some defaults
    .git
    __pycache__
    .tox
    .eggs
    *.egg
    # Auto-generated from .ui files
    *_ui.py
    # Auto-generate from .qrc files
    *_rc.py
    # Virtual environment
    .venv
    SConstruct
